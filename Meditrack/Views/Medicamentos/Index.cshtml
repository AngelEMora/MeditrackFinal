@model IEnumerable<Meditrack.Models.Medicamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMedicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMedicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDisponibleMedicamentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDisponible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distribuidor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PuntosReorden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDisponibleMedicamentos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDisponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVencimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distribuidor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PuntosReorden)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMedicamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMedicamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMedicamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
