@model Meditrack.Models.Medicamento

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html>
<body>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Crear </title>
        <link rel="stylesheet" href="/css/create.css" />

    </head>

    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-logo">
                <img src="/images/MediTracklogo.png" alt="MediTrack Logo">
            </a>
            <div class="navbar-right">
                <span class="navbar-username">@User.Identity.Name</span>
                <a href="/" class="navbar-logout">Salir</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <form class="form" asp-action="Create">
            <h2>Medicamentos</h2>
            <p>
                Agradecemos tu dedicación al completar este formulario,
                que nos ayudará a proporcionar el mejor cuidado posible a
                nuestros pacientes. La información recopilada será fundamental
                para comprender mejor las necesidades médicas y garantizar un tratamiento
                efectivo. Por favor, asegúrate de completar todos los campos
                requeridos con la información más precisa y actualizada disponible.
            </p>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="NombreMedicamento" class="control-label">Nombre del medicamento</label>
                    <input asp-for="NombreMedicamento" class="form-control" />
                    <span asp-validation-for="NombreMedicamento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TipoMedicamento" class="control-label">Tipo de medicamento</label>
                    <input asp-for="TipoMedicamento" class="form-control" />
                    <span asp-validation-for="TipoMedicamento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CantidadDisponibleMedicamentos" class="control-label">Cantidad Disponible Medicamentos</label>
                <input asp-for="CantidadDisponibleMedicamentos" class="form-control" />
                <span asp-validation-for="CantidadDisponibleMedicamentos" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CantidadDisponible" class="control-label">Cantidad Disponible</label>
                <input asp-for="CantidadDisponible" class="form-control" />
                    <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaVencimiento" class="control-label">Fecha de Vencimiento Lote</label>
                    <input asp-for="FechaVencimiento" class="form-control" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Distribuidor" class="control-label"></label>
                    <input asp-for="Distribuidor" class="form-control" />
                    <span asp-validation-for="Distribuidor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PuntosReorden" class="control-label">Punto de Reorden</label>
                    <input asp-for="PuntosReorden" class="form-control" />
                    <span asp-validation-for="PuntosReorden" class="text-danger"></span>
                </div>

                
            </div>

            

            <input type="submit" value="Enviar" class="submit">
        </form>

        <div class="info">
            <img src="/images/hospitallogo.jpg" class="img-1" alt="MediTrack Logo">
            <div class="location">
                <div class="icons">
                    <ion-icon name="location-outline" class="icono"></ion-icon>
                    <p>Carretera Mella No. 1 en la ciudad de San Pedro de Macorís, RD.</p>
                </div>
                <div class="icons">
                    <ion-icon name="call-outline" class="icono"></ion-icon>
                    <p>809-529-7022</p>
                </div>
                <div class="icons">
                    <ion-icon name="mail-outline" class="icono"></ion-icon>
                    <p>hospitaldr.antoniomusa@hotmail.com</p>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</body>
</html>

