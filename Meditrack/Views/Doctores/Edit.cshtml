@model Meditrack.Models.Doctore

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Editar </title>
    <link rel="stylesheet" href="/css/edit.css" />
    <!-- Agrega aquí tus estilos adicionales si es necesario -->
</head>
<body>

    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-logo">
                <img src="/images/MediTracklogo.png" alt="MediTrack Logo">
            </a>
            <div class="navbar-right">
                <span class="navbar-username">@User.Identity.Name</span>
                <a asp-action="Index" class="navbar-logout">Salir</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h2>Editando Doctor</h2>

        <form asp-action="Edit" method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDoctor" />

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="NombreDoctor" class="control-label">Nombre del Doctor</label>
                    <input asp-for="NombreDoctor" class="box" />
                    <span asp-validation-for="NombreDoctor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TelefonoDoctor" class="control-label">Teléfono</label>
                    <input asp-for="TelefonoDoctor" class="box" />
                    <span asp-validation-for="TelefonoDoctor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EdadDoctor" class="control-label">Edad</label>
                    <input asp-for="EdadDoctor" class="box" />
                    <span asp-validation-for="EdadDoctor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="NacionalidadDoctor" class="control-label">Nacionalidad</label>
                    <select asp-for="NacionalidadDoctor" class="box" asp-items="ViewBag.Nacionalidades">
                    </select>
                    <span asp-validation-for="NacionalidadDoctor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SexoDoctor" class="control-label">Sexo</label>
                    <select asp-for="SexoDoctor" class="box" asp-items="ViewBag.Sexos">
                    </select>
                    <span asp-validation-for="SexoDoctor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Especialidad" class="control-label">Especialidad</label>
                    <input asp-for="Especialidad" class="box" />
                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="submit">Guardar</button>
        </form>

        <div class="info">
            <img src="/images/MediTracklogo.png" class="img-1" alt="MediTrack Logo">
            <div class="location">
                <div class="icons">
                    <ion-icon name="location-outline" class="icono"></ion-icon>
                    <p>Carretera Mella No. 1 en la ciudad de San Pedro de Macorís, RD.</p>
                </div>
                <div class="icons">
                    <ion-icon name="call-outline" class="icono"></ion-icon>
                    <p>809-529-7022</p>
                </div>
                <div class="icons">
                    <ion-icon name="mail-outline" class="icono"></ion-icon>
                    <p>hospitaldr.antoniomusa@hotmail.com</p>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</body>
</html>

